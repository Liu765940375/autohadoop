#!/bin/bash
DESC="hadoop service script"
SCRIPTNAME="hadoop"

case "$1" in
    start)
        echo "Starting hadoop service"
        ;;
    stop)
        echo "Stopping hadoop service"
        ;;
    create)
        echo "Create hadoop infrastructure"
        source ../conf/env.sh
        python ../scripts/config.py ../conf/core-site.xml.template ../conf/$CORE_SITE_CONF_NAME ../conf/core-site.xml
        ;;
    restart)
        echo "Restart hadoop service"
        ;;
    delete)
        echo "Delete hadoop infrastructure"
        ;;
    *)
        echo "Usage: $SCRIPTNAME {start|stop|restart|create|delete}" >&2
        exit 3
        ;;
esac

exit 0
