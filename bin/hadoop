#!/bin/bash
set -x
DESC="hadoop service script"
SCRIPTNAME="hadoop"
SCRIPT_PATH="`dirname $0`/../scripts"
CONF_PATH="`dirname $0`/../conf"

case "$1" in
    start)
        echo "Starting hadoop service"
 	$HADOOP_HOME/sbin/start-dfs.sh
	$HADOOP_HOME/sbin/start-yarn.sh
        ;;
    stop)
        echo "Stopping hadoop service"
        ;;
#    create)
#        echo "Create hadoop infrastructure"
#        source $CONF_PATH/env.sh
#        source $SCRIPT_PATH/hadoop.sh         
#        deploy_hadoop
#        ;;
    restart)
        echo "Restart hadoop service"
        ;;
    delete)
        echo "Delete hadoop infrastructure"
        ;;
    *)
        echo "Usage: $SCRIPTNAME {start|stop|restart|create|delete}" >&2
        exit 3
        ;;
esac

exit 0
